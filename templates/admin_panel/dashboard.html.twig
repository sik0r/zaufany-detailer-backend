{% extends 'admin_panel/base.html.twig' %}

{% block title %}Dashboard Administratora{% endblock %}

{% block body %}
<div class="card bg-base-100 shadow-xl">
    <div class="card-body">
        <h1 class="card-title text-2xl mb-6">Nowe Zgłoszenia Warsztatów</h1>

        {% if leads is not empty %}
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full">
                    <thead>
                        <tr>
                            <th>Data Zgłoszenia</th>
                            <th>Imię</th>
                            <th>Nazwisko</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>NIP</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lead in leads %}
                            <tr>
                                <td>{{ lead.createdAt|date('Y-m-d H:i') }}</td>
                                <td>{{ lead.firstName }}</td>
                                <td>{{ lead.lastName }}</td>
                                <td>{{ lead.email }}</td>
                                <td>{{ lead.phoneNumber }}</td>
                                <td>{{ lead.nip }}</td>
                                <td>
                                    <a href="{{ path('admin_process_lead', {'id': lead.id}) }}" class="btn btn-primary btn-sm">Przetwórz</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert">
                <span>Brak nowych zgłoszeń.</span>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}