{% extends 'workshop_panel/base.html.twig' %}

{% block title %}Resetuj swoje hasło{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white p-8 shadow-md rounded-lg">
        <h1 class="text-2xl font-bold mb-6 text-center">Zresetuj swoje hasło</h1>

        {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
            <div class="mt-6">
                <button class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Zresetuj hasło
                </button>
            </div>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %} 