{% use 'tailwind_2_layout.html.twig' %}

{# Definicja globalnych klas dla wierszy formularza #}
{%- block form_row -%}
    {%- set row_class = row_class|default('mb-4') -%}
    {{- parent() -}}
{%- endblock form_row -%}

{# Definicja globalnych klas dla widgetów formularza (inputy, selecty, itp.) #}
{%- block widget_attributes -%}
    {%- set widget_class = widget_class|default('mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm') -%}
    {%- set widget_disabled_class = widget_disabled_class|default('bg-gray-200 cursor-not-allowed') -%}
    {%- set widget_errors_class = widget_errors_class|default('border-red-500') -%}
    {{- parent() -}}
{%- endblock widget_attributes -%}

{# Definicja globalnych klas dla etykiet formularza #}
{%- block form_label -%}
    {%- set label_class = label_class|default('block text-gray-700 text-sm font-medium mb-1') -%}
    {{- parent() -}}
{%- endblock form_label -%}

{# Definicja globalnych klas dla tekstów pomocy formularza #}
{%- block form_help -%}
    {%- set help_class = help_class|default('text-gray-600 text-xs mt-1') -%}
    {{- parent() -}}
{%- endblock form_help -%}

{# Definicja globalnych klas dla błędów formularza #}
{%- block form_errors -%}
    {%- set error_item_class = error_item_class|default('text-red-500 text-sm mt-1') -%}
    {{- parent() -}}
{%- endblock form_errors -%}

{# Definicja globalnych klas dla przycisków formularza #}
{%- block button_widget -%}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-lg font-medium text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition duration-150 ease-in-out')|trim}) -%}
    {{- parent() -}}
{%- endblock button_widget -%}

{# Specjalne style dla checkboxów i radio buttonów #}
{%- block checkbox_widget -%}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' h-4 w-4 text-yellow-600 border-gray-300 rounded focus:ring-yellow-500')|trim}) -%}
    {{- parent() -}}
{%- endblock checkbox_widget -%}

{%- block radio_widget -%}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' h-4 w-4 text-yellow-600 border-gray-300 focus:ring-yellow-500')|trim}) -%}
    {{- parent() -}}
{%- endblock radio_widget -%}

{# Specjalne style dla textarea #}
{%- block textarea_widget -%}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-500 focus:border-yellow-500 sm:text-sm')|trim}) -%}
    {{- parent() -}}
{%- endblock textarea_widget -%} 